rule all_metaquast:
    input:
        expand(str(Cfg['all']['output_fp']/'assembly/metaquast_results/{sample}/'),
               sample=Samples.keys())

rule run_metaquast:
    input:
        expand(str(ASSEMBLY_FP/'contigs'/'{sample}-contigs.fa'), 
               sample=Samples.keys())
    output:
        directory(expand(str(Cfg['all']['output_fp']/'assembly/metaquast_results/{sample}/'),
               sample=Samples.keys()))
    conda:
        "sbx_metaquast_env.yml"
    threads: Cfg['sbx_metaquast']['threads']
    shell:
        "python /projectnb/talbot-lab-data/zrwerbin/metagenomes_raw/test_pipeline/sunbeam/extensions/sbx_metaquast/quast/metaquast.py -t {threads} {input} -o {output}"

