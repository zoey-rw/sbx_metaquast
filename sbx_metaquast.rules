rule run_metaquast:
    input:
        contigs = expand(str(ASSEMBLY_FP/'contigs'/'{sample}-contigs.fa'),
               sample=Samples.keys())
    output:
        str(Cfg['all']['output_fp']/'assembly/metaquast_results/report.html')
    params:
        str(Cfg['all']['output_fp']/'assembly/metaquast_results/')
    conda:
        "sbx_metaquast_env.yml"
    threads: Cfg['sbx_metaquast']['threads']
    shell:
        """
        python metaquast.py -t {threads} {input.contigs} -o {params}
        """
